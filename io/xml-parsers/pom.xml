<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>mdk-io</artifactId>
    <groupId>uk.ac.ebi.mdk</groupId>
    <version>1.5.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>mdk-io-xml-parsers</artifactId>

  <dependencies>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>1.9.5</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>uk.ac.ebi.mdk</groupId>
      <artifactId>mdk-domain-entity</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>


    <dependency>
      <groupId>uk.ac.ebi.mdk</groupId>
      <artifactId>mdk-interface</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>uk.ac.ebi.mdk</groupId>
      <artifactId>mdk-domain-identifier</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>uk.ac.ebi.mdk</groupId>
      <artifactId>mdk-domain-annotation</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>uk.ac.ebi.mdk</groupId>
      <artifactId>mdk-domain-observation</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>org.sbml.jsbml</groupId>
      <artifactId>jsbml</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>net.sf.opencsv</groupId>
      <artifactId>opencsv</artifactId>
      <version>2.3</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>14.0</version>
    </dependency>
    <dependency>
      <groupId>org.biojava</groupId>
      <artifactId>biojava3-core</artifactId>
      <version>3.0.5</version>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.17</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.woodstox</groupId>
      <artifactId>woodstox-core-lgpl</artifactId>
      <version>4.1.4</version>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-impl</artifactId>
      <version>2.2.7</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxb2-maven-plugin</artifactId>
        <version>1.5</version>
        <configuration>
          <schemaDirectory>src/main/resources/uk/ac/bbk/rex</schemaDirectory>
          <schemaFiles>rex.xsd</schemaFiles>
          <packageName>uk.ac.bbk.rex</packageName>
          <npa>true</npa>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>xjc</goal>
            </goals>
          </execution>
        </executions>

      </plugin>
    </plugins>
  </build>


</project>
